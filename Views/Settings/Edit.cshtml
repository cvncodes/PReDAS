@model Yourcode.CMS.Models.CONFIG

@{
    ViewBag.Title = "Editar Configuração | " + @ViewBag.Empresa;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Settings
            <small>Edit Settings</small>
        </h1>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    @using (Html.BeginForm("edit", "settings", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(model => model.ID)
                        @Html.HiddenFor(model => model.USERINC)
                        @Html.HiddenFor(model => model.DATAINC)
                        @Html.HiddenFor(model => model.SITUACAO)

                        <div class="box-body">

                            <div class="row">
                                <div class="col-md-6 col-xs-12">
                                    @Html.LabelFor(model => model.CHAVE, "Key *")
                                    @Html.TextBoxFor(model => model.CHAVE, new { @class = "form-control", @required = "required", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.CHAVE)
                                </div>
                                <div class="col-md-6 col-xs-12">
                                    @Html.LabelFor(model => model.VALOR, "Value *")
                                    @Html.TextBoxFor(model => model.VALOR, new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.VALOR)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-xs-12">
                                    @Html.LabelFor(model => model.OBS, "Observation")
                                    @Html.TextBoxFor(model => model.OBS, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.OBS)
                                </div>
                            </div>

                        </div>
                        <div class="box-footer">
                            <button type="submit" id="btnSalvar" class="btn btn-flat btn-primary">Save</button>
                            <button type="button" id="btnCancelar" name="btnCancelar" class="btn btn-flat btn-default" onclick="history.go(-1)">Cancel</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>