@model Yourcode.CMS.Models.SENSOR

@{
    ViewBag.Title = "Editar Serviço | " + ViewBag.Empresa;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Sensors
            <small>Edit Sensor</small>
        </h1>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    @using (Html.BeginForm("edit", "sensor", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(model => model.ID)
                        @Html.HiddenFor(model => model.DATAINC)
                        @Html.HiddenFor(model => model.SITUACAO)
                        @Html.HiddenFor(model => model.USERINC)

                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-6 col-xs-12">
                                    @Html.LabelFor(model => model.TITULO, "Name *")
                                    @Html.TextBoxFor(model => model.TITULO, new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.TITULO)
                                </div>
                                <div class="col-md-6 col-xs-12">
                                    @Html.LabelFor(model => model.ATIVO, "Status *")
                                    @Html.DropDownListFor(model => model.ATIVO, (SelectList)ViewBag.ListaAtivo, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(o => o.ATIVO)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-xs-12">
                                    @Html.LabelFor(model => model.VALOR, "API Name *")
                                    @Html.TextBoxFor(model => model.VALOR, new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.VALOR)
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-12 col-xs-12">
                                    @Html.LabelFor(model => model.DESCRICAO, "Description *")
                                    @Html.TextAreaFor(model => model.DESCRICAO, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DESCRICAO)
                                </div>
                            </div>


